rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Projects - users can read/write their own projects
    match /projects/{projectId} {
      // Allow read if user is the creator
      allow read: if request.auth != null && 
                  request.auth.uid == resource.data.createdBy;
      
      // Allow create if user is setting themselves as creator
      allow create: if request.auth != null && 
                    request.auth.uid == request.resource.data.createdBy;
      
      // Allow update/delete if user is the creator
      allow update, delete: if request.auth != null && 
                            request.auth.uid == resource.data.createdBy;
      
      // Shapes within a project - anyone who can read the project can edit shapes
      match /shapes/{shapeId} {
        allow read, write: if request.auth != null && 
                           request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.createdBy;
      }
      
      // Comments within a project
      match /comments/{commentId} {
        allow read: if request.auth != null && 
                    request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.createdBy;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && 
                              (request.auth.uid == resource.data.author.id ||
                               request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.createdBy);
      }
    }
    
    // Legacy: Old canvas objects (for backward compatibility, can be removed later)
    match /canvases/{canvasId}/objects/{objectId} {
      allow read, write: if request.auth != null;
    }
    
    match /canvases/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

