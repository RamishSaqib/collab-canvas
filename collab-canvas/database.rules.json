{
  "rules": {
    "cursors": {
      "$canvasId": {
        ".read": "auth != null",
        "$userId": {
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "presence": {
      "$canvasId": {
        ".read": "auth != null",
        "$userId": {
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "active-shapes": {
      "$canvasId": {
        ".read": "auth != null",
        "$shapeId": {
          ".write": "auth != null",
          ".validate": "newData.hasChildren(['x', 'y', 'userId', 'timestamp'])"
        }
      }
    }
  }
}

